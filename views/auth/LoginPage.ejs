<% layout('layouts/boilerplate') -%>
<section class="row justify-content-center align-items-center flex-fill m-0 py-5">
  <div class="col-12 col-md-8 col-lg-6 col-xl-4 col-xxl-3 py-5">
    <div class="position-relative glow">
      <img
        src="/images/graphics/g1.svg"
        alt="graphics x"
        class="opacity-50 position-absolute start-100 top-0 translate-middle"
        style="width: 10vmin"
      />
      <img
        src="/images/graphics/g3.svg"
        alt="graphics x"
        class="opacity-50 position-absolute start-0 top-100 translate-middle"
        style="width: 10vmin"
      />
      <div class="rounded-4 p-4 glass">
        <h1 class="display-6 fw-lighter">Login to your account</h1>
        <form method="post" action="/auth/login">
          <div class="mt-3">
            <label for="email-input">Email</label>
            <input type="email" id="email-input" name="username" class="form-control" required />
          </div>
          <div class="mt-3">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" required />
          </div>
          <button type="submit" class="btn btn-primary btn-gradient w-100 mt-3">Login</button>
        </form>

        <p class="m-0 mt-3 text-end">or create a <a href="/auth/signup" class="link-info">new account.</a></p>
      </div>
    </div>
  </div>
</section>
