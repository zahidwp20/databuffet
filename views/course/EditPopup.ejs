<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#createModal">
  <i class="ph-duotone ph-pencil-simple align-middle"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  data-bs-theme="dark"
  id="createModal"
  tabindex="-1"
  aria-labelledby="createModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content text-start text-white">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="createModalLabel">Add New Course</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/courses/<%=course._id%>?_method=PUT" method="post">
          <div>
            <label for="title-input">Title</label>
            <input type="text" name="title" id="title-input" class="form-control" value="<%=course.title%>" />
          </div>
          <div class="mt-3">
            <label for="desc-input">Description</label>
            <textarea name="description" id="desc-input" cols="30" rows="5" class="form-control">
<%=course.description%></textarea
            >
          </div>
          <div class="mt-3">
            <label>Difficulty</label>
            <div class="d-flex gap-1">
              <input type="radio" class="btn-check" name="difficulty" id="difficulty1" value="beginner" required
              <%=course.difficulty==="beginner"?"checked":""%> />
              <label class="btn btn-sm btn-outline-light border-2 rounded-pill px-3" for="difficulty1">Beginner</label>

              <input type="radio" class="btn-check" name="difficulty" id="difficulty2" value="intermediate" required
              <%=course.difficulty==="intermediate"?"checked":""%> />
              <label class="btn btn-sm btn-outline-light border-2 rounded-pill px-3" for="difficulty2"
                >Intermediate</label
              >

              <input type="radio" class="btn-check" name="difficulty" id="difficulty3" value="advanced" required
              <%=course.difficulty==="advanced"?"checked":""%> />
              <label class="btn btn-sm btn-outline-light border-2 rounded-pill px-3" for="difficulty3">Advanced</label>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-6">
              <label for="technology-input">Technology</label>
              <input
                type="text"
                list="technologies"
                id="technology-input"
                name="technology"
                class="form-select form-select-sm"
                value="<%=course.technology?.name%>"
                placeholder="search..."
                required
              />
              <datalist id="technologies">
                <%technologies.forEach(t=>{%>
                <option value="<%=t.name%>"><%=t.name%></option>
                <%})%>
              </datalist>
            </div>
            <div class="col-6">
              <label for="topic-input">Topic</label>
              <input
                type="text"
                list="topics"
                id="topic-input"
                name="topic"
                class="form-select form-select-sm"
                value="<%=course.topic?.name%>"
                placeholder="search..."
                required
              />
              <datalist id="topics">
                <%topics.forEach(t=>{%>
                <option value="<%=t.name%>"><%=t.name%></option>
                <%})%>
              </datalist>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-auto">
              <label>Type</label>
              <div class="input-group input-group-sm">
                <input type="radio" class="btn-check" name="type" value="course" id="type1"
                <%=course.type==="course"?"checked":""%> required />
                <label class="btn btn-outline-light px-3 rounded-start" for="type1">Course</label>

                <input type="radio" class="btn-check" name="type" value="project" id="type2"
                <%=course.type==="project"?"checked":""%> required />
                <label class="btn btn-outline-light px-3" for="type2">Project</label>
              </div>
            </div>
            <div class="col">
              <label for="length-input">Length</label>
              <div class="input-group input-group-sm">
                <input
                  type="number"
                  class="form-control flex-fill"
                  name="length[value]"
                  id="length-input"
                  value="<%=course.length?.value%>"
                  required
                />

                <input type="radio" class="btn-check" name="length[unit]" value="minutes" id="length1"
                <%=course.length?.unit==="minutes"?"checked":""%> required />
                <label class="btn btn-outline-light" for="length1">Minutes</label>
                <input type="radio" class="btn-check" name="length[unit]" value="hours" id="length2"
                <%=course.length?.unit==="hours"?"checked":""%> required />
                <label class="btn btn-outline-light" for="length2">Hours</label>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <label>Link</label>
            <div class="input-group">
              <input
                type="text"
                name="link[title]"
                id="link-title-input"
                class="form-control form-control-sm"
                placeholder="Title"
                value="<%=course.link && course.link.title%>"
              />
              <input
                type="text"
                name="link[url]"
                id="link-url-input"
                class="form-control form-control-sm flex-fill"
                placeholder="URL"
                value="<%=course.link && course.link.url%>"
              />
            </div>
          </div>

          <div class="text-end mt-3">
            <button type="button" class="btn btn-sm btn-outline-secondary px-4" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-sm btn-primary px-5">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
